---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
export interface Props {
  title: string;
  icon?: string;
}

const { title,icon="favicon.svg"} = Astro.props;
---

<!DOCTYPE html>
<html lang="tr">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <link rel="shortcut icon" href={icon} type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.6.4.js"
      integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E="
      crossorigin="anonymous"
    ></script>
    <script>
      $(document).ready(function () {
        let renkMode = 1;
        $("#renkButton").click(function () {
          if (renkMode == 0) {
            $("body").css("background-color", "#0a0a0af1");
            $("body").css("color", "#fff");
			$("#renkButton").html("Koyu Mod");
            renkMode = 1;
          } else {
            $("body").css("background-color", "#fff");
            $("body").css("color", "#000");
            renkMode = 0;
			$("#renkButton").html("Açık Mod");
          }
        });
      });
    </script>
  </head>

  <body>
    <div class="p-5 bg-secondary text-white text-center">
      <h1>filmIncele.com</h1>
      <p>AstroJS + AlpineJS + Bootstrap + CouchDB</p>
    </div>
    <Navbar />

    <div class="container mt-5">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style is:global>
  .fakeimg {
    height: 200px;
    background: #949494;
  }
  .img {
    width: 100%;
    height: 300px;
  }
  body {
    background-color: #0a0a0af1;
    color: #fff;
  }
</style>
